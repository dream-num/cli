    "esbuild": "^0.19.12",
    "esbuild-plugin-clean": "^1.0.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "minimist": "^1.2.8",
    "release-it": "^17.0.3",
    "simple-git-hooks": "^2.9.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
