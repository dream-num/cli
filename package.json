    "@univerjs/network": "*",
    "@univerjs/rpc": "*",
    "@univerjs/sheets": "*",
    "@univerjs/sheets-formula": "*",
    "@univerjs/sheets-numfmt": "*",
    "@univerjs/sheets-ui": "*",
    "@univerjs/ui": "*",
    "@univerjs/uniscript": "*",
    "@wendellhu/redi": "^0.12.13",
    "clsx": "^2.1.0",
